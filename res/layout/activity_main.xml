<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ABA4A4"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="#673AB7"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:text="Calculator"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="6"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/btn_9"
        app:layout_constraintTop_toBottomOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="2"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_3"
        app:layout_constraintEnd_toStartOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="5"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_6"
        app:layout_constraintEnd_toStartOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="1"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_2"
        app:layout_constraintStart_toStartOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="-"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_3"
        app:layout_constraintStart_toEndOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="0"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_dot"
        app:layout_constraintEnd_toStartOf="@+id/btn_dot"
        app:layout_constraintStart_toStartOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_equals"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="="
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="."
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
        app:layout_constraintEnd_toStartOf="@+id/btn_equals" />

    <Button
        android:id="@+id/btn_slash"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="/"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_9"
        app:layout_constraintStart_toEndOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_neg"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="NEG"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn_slash"
        app:layout_constraintTop_toTopOf="@+id/btn_slash" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="+"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
        app:layout_constraintStart_toEndOf="@+id/btn_equals" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="*"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_6"
        app:layout_constraintStart_toEndOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="4"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_5"
        app:layout_constraintStart_toStartOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="3"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="9"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="8"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_9"
        app:layout_constraintEnd_toStartOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="54dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#bfbfbf"
        android:minWidth="100dp"
        android:text="7"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_8"
        app:layout_constraintEnd_toStartOf="@+id/btn_8" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_7"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newNumber"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/btn_neg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>